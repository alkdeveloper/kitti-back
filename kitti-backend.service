[Unit]
Description=Kitti Backend Gunicorn daemon
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/kitti-back
Environment="PATH=/home/ubuntu/kitti-back/venv/bin"
ExecStart=/home/ubuntu/kitti-back/venv/bin/gunicorn \
    --config /home/ubuntu/kitti-back/gunicorn_config.py \
    kitti.wsgi:application

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target

